{
  "name": "racers-fun",
  "version": "1.0.0",
  "description": "Real-time waifu racing platform with on-chain betting",
  "main": "server.js",
  "scripts": {
    "prestart": "npm run build",
    "predev": "node build.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:build": "node build.js && nodemon server.js",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "node build.js",
    "docker:build": "docker build --build-arg PRIVY_APP_ID=${PRIVY_APP_ID} -t racers-fun .",
    "docker:run": "docker run -p 3001:3001 racers-fun",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@privy-io/server-auth": "^1.8.0",
    "@sentry/node": "^7.81.1",
    "@solana/web3.js": "^1.87.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.1.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "sanitize-html": "^2.11.0",
    "socket.io": "^4.7.4",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vercel": "^32.0.0",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "racing",
    "web3",
    "solana",
    "real-time",
    "betting",
    "gaming",
    "blockchain"
  ],
  "author": "Racers.fun Team",
  "license": "MIT"
}
