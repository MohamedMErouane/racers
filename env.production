# Production Environment Variables for AWS/Hostinger Deployment
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0
CORS_ORIGIN=https://your-domain.com

# Privy Configuration (Get from https://privy.io)
PRIVY_APP_ID=your_privy_app_id_here
PRIVY_APP_SECRET=your_privy_app_secret_here
PRIVY_JWKS_URL=https://auth.privy.io/api/v1/apps/YOUR_APP_ID/jwks.json

# Database Configuration
DATABASE_URL=postgresql://racers:your_secure_password@postgres:5432/racers
DB_USER=racers
DB_PASSWORD=your_secure_database_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
PROGRAM_ID=your_deployed_solana_program_id

# Wallet Configuration (SECURITY: Use AWS Secrets Manager in production)
PHANTOM_PRIVATE_KEY=your_phantom_private_key_array

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Race Configuration
RACE_COUNTDOWN_MS=10000
RACE_DURATION_MS=12000
RACE_SETTLE_MS=2000

# AWS Deployment Variables (for CodeBuild)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
IMAGE_REPO_NAME=racers-fun
IMAGE_TAG=latest